/* pages/profile/profile.wxss */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background: #fff;
  margin-bottom: 20rpx;
}

.avatar-wrapper {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.avatar {
  width: 100%;
  height: 100%;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.wallet {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 20rpx;
}

.balance {
  font-size: 36rpx;
  color: #ff6b81;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.wallet-btns {
  display: flex;
  gap: 20rpx;
}

.btn {
  background: #ff6b81;
  color: #fff;
}

.menu-list {
  background: #fff;
  padding: 0 30rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

.arrow {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}

.logout {
  color: #ff4d4f;
  width: 100%;
  text-align: center;
}