.notice {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1001;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.notice.show {
  opacity: 1;
}

.notice-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
}

.notice-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.notice-header {
  padding: 40rpx 0;
  text-align: center;
  background: #ff6b81;
}

.notice-title {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
}

.notice-body {
  padding: 40rpx;
}

.winner-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.winner-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
}

.winner-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.prize-info {
  text-align: center;
  margin-bottom: 30rpx;
}

.prize-amount {
  font-size: 40rpx;
  color: #ff6b81;
  font-weight: bold;
}

.notice-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.notice-tips text {
  font-size: 24rpx;
  color: #999;
}

.notice-footer {
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.close-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #ff6b81;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
} 